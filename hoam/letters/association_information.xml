<ajax-response>
  <letter>
    <name>Association Information</name>
    <require_delivery_confirmation>0</require_delivery_confirmation>
    <require_delivery_certified>0</require_delivery_certified>
    <suggest_delivery_confirmation>0</suggest_delivery_confirmation>
    <suggest_delivery_certified>0</suggest_delivery_certified>
    <content><![CDATA[
<div class="letter-head">{{LETTER_HEAD}}</div>

<div class="letter-date">{{DATE}}</div>

<div class="letter-homeowner-address">{{HOMEOWNER_MAILING}}</div>

<div class="letter-tracking"></div>

<div class="letter-residence-address">Property: {{HOMEOWNER_RESIDENCE}}</div>

<div class="letter-topic">Re: {{LETTER_TOPIC}}</div>

<div class="letter-salutation">Dear {{HOMEOWNER_NAME}},</div>

<div class="letter-body">

<p>Please see below information regarding your inqiry about {{ORG_NAME}}:</p>

<table width="80%">
	<colgroup>
		<col width="25% style="font-weight: bold; align: right">
		<col width="75% style="align: left">
	</colgroup>
	<tbody>
		<tr><td>Association Name</td><td>{{ORG_NAME}}</td></tr>
		<tr><td>Property Name</td><td>{{ORG_PROPERTY_NAME}}</td></tr>
		<tr><td>Number of Units</td><td>{{ORG_UNITS}}</td></tr>
		<tr><td>Owner Name</td><td>{{HOMEOWNER_NAME}}</td></tr>
		<tr><td>Property Address</td><td>{{HOMEOWNER_RESIDENCE}}</td></tr>
		<tr><td>Property Block</td><td>{{LOT_BLOCK}}</td></tr>
		<tr><td>Property Lot</td><td>{{LOT_LOT}}</td></tr>
		<tr><td>Property Plat</td><td>{{LOT_PLAT}}</td></tr>
		<tr><td>Regular Assessment Amount</td><td>{{BUDGET_ASSESSMENT_AMOUNT}}</td></tr>
		<tr><td>Current Account Balance</td><td>{{BUDGET_DUE}}</td></tr>
		<tr><td>Last Payment Received</td><td>{{BUDGET_LAST_PAYMENT}}</td></tr>
		<tr><td>Board of Directors Email</td><td>{{ORG_EMAIL_BOARD}}</td></tr>
		<tr><td>Association Officers Email</td><td>{{ORG_EMAIL_OFFICERS}}</td></tr>
		<tr><td>Managment Company Email</td><td>{{ORG_EMAIL_MANAGEMENT}}</td></tr>
		<tr><td>Association Address</td><td>{{ORG_ADDRESS}}</td></tr>
		<tr><td>Association Phone</td><td>{{ORG_PHONE}}</td></tr>
		<tr><td>Association Fax</td><td>{{ORG_PHONE_FAX}}</td></tr>
		<tr><td>Association Website</td><td>{{WEBSITE_URL}}</td></tr>
	</tbody>
</table>

</div>

<div class="letter-signature">{{LETTER_SIGNATURE}}</div>

<div class="letter-approver">{{LETTER_APPROVER}}</div>

<div class="letter-person">{{LETTER_PERSON}}</div>

<div class="letter-footer">{{LETTER_FOOTER}}</div>
]]></content>
  </letter>
</ajax-response>
